@model OrderItem;
@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>

<form asp-action="Order" method="post">
    <div class="form-group">
        <label asp-for="Processor">Select Processor</label>
        <select asp-for="Processor" class="form-control">
            <option value="">none</option>
            <option value="i3">Intel i3</option>
            <option value="i5">i5</option>
            <option value="i7">i7</option>
            <option value="i9">i9</option>
        </select>
        <span asp-validation-for="Processor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RAM">Select RAM</label>
        <input type="number" asp-for="RAM" class="form-control" />
        <span asp-validation-for="RAM" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Speed">Enter Speed</label>
        <input asp-for="Speed" class="form-control" />
        <span asp-validation-for="Speed" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HDSize">Enter HD size in TB</label>
        <input asp-for="HDSize" class="form-control" />
        <span asp-validation-for="HDSize" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Your email</label>
        <input asp-for="Email" class="form-control" placeholder="you@domain.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Order the computer</button>
    <button type="reset" class="btn btn-danger">Cancel the order</button>
</form>

