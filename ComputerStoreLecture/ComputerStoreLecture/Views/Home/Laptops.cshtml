
@{ ViewData["Title"] = "Laptops";
   SiteData globals = new SiteData(); }

<h1>Laptops</h1>
<h3>Setup costs for laptops are @globals.setup</h3>
<p>We offer 24x7 support. For help reach out to @globals.email</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>RAM</th>
            <th>Screen</th>
            <th>Weight</th>
            <th>Price with tax</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Laptop rig in Model)
        {
        <tr>
            <td>@rig.Name</td>
            <td>@($"{(rig.Price):C2}")</td>
            <td>@rig.RAM</td>
            <td>@rig.Screen</td>
            <td>@rig.Weight</td>
            <td>@($"{(rig.Price * (globals.tax + 1)):C2}")</td>
        </tr>}
    </tbody>

