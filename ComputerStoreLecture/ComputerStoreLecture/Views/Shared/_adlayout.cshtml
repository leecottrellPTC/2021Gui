<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComputerStoreLecture</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/cerulean.css" />
</head>
<body>
    <header>
       @Html.Partial("_menu")
    </header>
    <div class="container">
        <div class="row">
            <img src="http://placekitten.com/1600/200" class="img-fluid"/>
        </div>
        <div class="row">

            <div class="col-md-2">
                <img src="http://placekitten.com/200/800" class="img-fluid"/>
            </div>

            <div class="col-md-8">
                @RenderBody()
            </div>

            <div class="col-md-2">
                <img src="http://placekitten.com/200/800" class="img-fluid"/>
            </div>

        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ComputerStoreLecture - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
